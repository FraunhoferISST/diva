{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "vuejs: firefox",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/src",
            "pathMappings": [
                {
                    "url": "webpack:///src/views",
                    "path": "${workspaceFolder}/web-client/src/views"
                },
                {
                    "url": "webpack:///src/",
                    "path": "${webRoot}/"
                }
            ]
        }
    ]
}