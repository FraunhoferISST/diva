{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "asset",
  "type": "object",
  "title": "General Asset Data",
  "required": [
    "assetType",
    "entities"
  ],
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "/entity"
    },
    {
      "$ref": "/commonProperties"
    },
    {
      "$ref": "/distributionProperties"
    },
    {
      "$ref": "/costs"
    },
    {
      "properties": {

        "assetType": {
          "$id": "assetType",
          "type": "string",
          "title": "Asset Type",
          "description": "The type of the asset",
          "enum": [
            "generic",
            "urbanPulse"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "entities": {
          "$id": "entities",
          "type": "array",
          "title": "Asset linked entities",
          "description": "The array of entites id's linked with the asset",
          "minItems": 0,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^.+:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$",
            "_elasticsearch": {
              "type": "keyword"
            }
          }
        }

      }
       
    },

    {
      "if": {
        "properties": {
          "assetType": {
            "const": "urbanPulse"
          }
        }
      },
      "then": {
        "$ref": "assetUrbanPulse"
      }
    }

  ]
}