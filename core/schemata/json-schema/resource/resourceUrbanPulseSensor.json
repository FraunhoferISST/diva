{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "resourceUrbanPulseSensor",
  "type": "object",
  "title": "General Urban Pulse sensor resource Data",
  "required": [
    "urbanPulseSensorId",
    "uniqueFingerprint",
    "urbanPulseSensorSince",
    "urbanPulseSensorUntil"
  ],
  "properties": {
    "uniqueFingerprint": {
      "$id": "uniqueFingerprint",
      "type": "string",
      "title": "Unique sensor identifier",
      "description": "Unique sensor identifier is a SHA256 hash from 'sensorId', 'since' and 'until' fields",
      "pattern": "^[A-Fa-f0-9]{64}$",
      "examples": [
        "7103cd78f9f78e778f3c2b8d902c8c1e936b10c39aeb6e47d2b9a16b82093e6c"
      ]
    },
    "urbanPulseSensorId": {
      "$id": "urbanPulseSensorId",
      "type": "string",
      "title": "UrbanPulse sensor id",
      "description": "UrbanPulse sensor unique identifier",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$",
      "examples": [
        "d55d64cf-2e80-43d6-82ba-2107c3f96dc6"
      ]
    },
    "urbanPulseSensorSince": {
      "$id": "urbanPulseSensorSince",
      "type": "string",
      "title": "Since date",
      "description": "The start of the date range of the retrieved sensor data",
      "minLength": 1,
      "examples": [
        "2018-11-08T13:55:45Z"
      ],
      "format": "date-time"
    },
    "urbanPulseSensorUntil": {
      "$id": "urbanPulseSensorUntil",
      "type": "string",
      "title": "Until date",
      "description": "The end of the date range of the retrieved sensor data",
      "minLength": 1,
      "examples": [
        "2018-11-08T13:55:45Z"
      ],
      "format": "date-time"
    }
  }
}