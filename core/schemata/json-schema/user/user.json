{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "user",
  "type": "object",
  "title": "User Data",
  "required": [
    "username",
    "email"
  ],
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "/entity"
    },
    {
      "properties": {

        "username": {
          "$id": "/properties/username",
          "type": "string",
          "title": "The Username Schema",
          "examples": [
            "mustermann"
          ],
          "minLength": 1,
          "_elasticsearch": {
            "type": "text",
            "analyzer": "simple"
          }
        },

        "email": {
          "$id": "/properties/email",
          "type": "string",
          "format": "email",
          "title": "The Email Schema ",
          "examples": [
            "muster@mann.de"
          ],
          "_elasticsearch": {
            "type": "keyword",
            "analyzer": "keyword"
          }
        },

        "password": {
          "$id": "/properties/password",
          "type": ["string", "null"],
          "title": "The Password Schema ",
          "examples": [
            "foobarpassword123"
          ],
          "minLength": 4,
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "imageId": {
          "$id": "/properties/imageId",
          "type": "string",
          "title": "The imageId Schema ",
          "examples": [
            "67d4acaa-00e0-4a00-8b61-15abe20e1413"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "imageUrl": {
          "$id": "/properties/imageUrl",
          "type": "string",
          "title": "The imageURL Schema",
          "description": "The URL of externally provided user profile image",
          "examples": [
            "https://image-host.com"
          ],
          "format": "uri",
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "company": {
          "$id": "/properties/company",
          "type": "string",
          "title": "Company Name",
          "examples": [
            "Example Company GmbH"
          ],
          "_elasticsearch": {
            "type": "text",
            "analyzer": "simple"
          }
        },

        "jobTitle": {
          "$id": "/properties/jobTitle",
          "type": "string",
          "title": "Job Title",
          "examples": [
            "Senior Software Developer"
          ],
          "_elasticsearch": {
            "type": "text",
            "analyzer": "simple"
          }
        },

        "phoneNumber": {
          "$id": "/properties/phoneNumber",
          "type": "string",
          "title": "Phone Number",
          "examples": [
            "+49 1234 56789",
            "0022 1111 2222 3333"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "mobileNumber": {
          "$id": "/properties/mobileNumber",
          "type": "string",
          "title": "Mobile Number",
          "examples": [
            "+49 150 1111 2222"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "addressLocality": {
          "type": "string",
          "title": "Address Locality",
          "examples": [
            "Dortmund",
            "New York"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "addressRegion": {
          "type": "string",
          "title": "Address Region",
          "examples": [
            "NRW",
            "TX"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "postalCode": {
          "type": "string",
          "title": "Postal Code",
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "streetAddress": {
          "type": "string",
          "title": "Street Address",
          "_elasticsearch": {
            "type": "text",
            "analyzer": "standard"
          }
        },

        "postOfficeBoxNumber": {
          "type": "string",
          "title": "Post Office Box Number",
          "_elasticsearch": {
            "type": "keyword"
          }
        }
        
      }
    }
  ]
}
