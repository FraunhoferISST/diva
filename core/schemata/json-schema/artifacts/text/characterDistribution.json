{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "characterDistribution",
    "type": "object",
    "title": "Character Distribution",
    "additionalProperties": true,
    "properties": {
        "characterDistribution": {
            "type": "array",
            "title": "Character Distribution",
            "description": "Distribution of the characters of a text",
            "default": 0,
            "minItems": 0,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "character",
                    "count"
                ],
                "properties": {
                    "character": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1,
                    },
                    "count": {
                        "type": "integer",
                        "minimum": 0,
                        "_elasticsearch": {
                            "type": "unsigned_long"
                        }
                    }
                }
            }
        }
    }
}