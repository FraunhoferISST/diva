{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "characterEncoding",
    "type": "object",
    "title": "Text Character Encoding",
    "additionalProperties": true,
    "properties": {
      "characterEncoding": {
        "type": "string",
        "title": "Charset",
        "description": "The used character encoding of a text",
        "default": "",
        "minLength": 1,
        "examples": [
          "utf-8",
          "ISO-8859-1"
        ],
        "pattern": "^(.*)$",
        "_elasticsearch": {
          "type": "keyword"
      }
      }
    }
  }
  