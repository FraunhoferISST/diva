{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "entityRepresentationImage",
  "type": "object",
  "title": "Entity Image",
  "allOf": [
    {
      "properties": {
        "imageId": {
          "$id": "/properties/imageId",
          "type": "string",
          "title": "The imageId Schema",
          "examples": ["67d4acaa-00e0-4a00-8b61-15abe20e1413"],
          "_elasticsearch": {
            "type": "keyword"
          }
        },

        "imageUrl": {
          "$id": "/properties/imageUrl",
          "type": "string",
          "title": "The imageURL Schema",
          "description": "The URL of externally provided image",
          "examples": ["https://image-host.com"],
          "format": "uri",
          "_elasticsearch": {
            "type": "keyword"
          }
        }
      }
    }
  ]
}
