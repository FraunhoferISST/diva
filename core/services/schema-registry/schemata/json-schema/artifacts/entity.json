{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "entity",
  "type": "object",
  "title": "General Entity Data",
  "required": [
    "id",
    "entityType",
    "created",
    "modified",
    "creatorId"
  ],
  "definitions": {
    "imageSource": {
      "anyOf": [
        {
          "type": "string",
          "title": "Image URL",
          "description": "The host URL of the image",
          "format": "uri",
          "examples": ["https://image-host.com/my-image"],
          "_elasticsearch": {
            "type": "keyword"
          }
        },
        {
          "type": "string",
          "title": "Image id",
          "description": "The id of the uploaded image",
          "examples": ["image:uuid:67d4acaa-00e0-4a00-8b61-15abe20e1413"],
          "pattern": "^image:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$",
          "_elasticsearch": {
            "type": "keyword"
          }
        }
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "entityType": { "const": "resource" } }
      },
      "then": {
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^resource:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        }
      }
    },
    {
      "if": {
        "properties": { "entityType": { "const": "asset" } }
      },
      "then": {
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^asset:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        }
      }
    },
    {
      "if": {
        "properties": { "entityType": { "const": "review" } }
      },
      "then": {
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^review:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        }
      }
    },
    {
      "if": {
        "properties": { "entityType": { "const": "user" } }
      },
      "then": {
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^user:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        }
      }
    },
    {
      "if": {
        "properties": { "entityType": { "const": "history" } }
      },
      "then": {
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^history:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        }
      }
    },
    {
      "if": {
        "properties": { "entityType": { "const": "service" } }
      },
      "then": {
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^service:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        }
      }
    },
    {
      "properties": {

        "id": {
          "$id": "id",
          "type": "string",
          "title": "Unique Identifier",
          "description": "An unique ID of the processed entity. shortCut for -> dctermsIdentifier",
          "examples": [
            "user:uuid:4600ea84-485a-49b3-8f15-85fc5ce2e0f9",
            "asset:uuid:4600ea84-485a-49b3-8f15-85fc5ce2e0f9",
            "resource:urban-pulse-sensor:uuid:4600ea84-485a-49b3-8f15-85fc5ce2e0f9",
            "resource:file:image::uuid:4600ea84-485a-49b3-8f15-85fc5ce2e0f9"
          ],
          "$comment": "This property is a placeholder for title, description, and examples. Will be overwritten by if/then conditions above.",
          "_elasticsearch": {
            "type": "keyword"
          }
        },
    
        "entityType": {
          "$id": "entityType",
          "type": "string",
          "title": "Entity Type",
          "description": "The general type of the entity",
          "enum": [
            "resource",
            "asset",
            "user",
            "review",
            "history",
            "service"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        },
        
        "created": {
          "$id": "created",
          "type": "string",
          "title": "Creation date",
          "description": "Date of creation of the entity",
          "examples": [
            "2018-11-08T13:55:45Z"
          ],
          "format": "date-time",
          "_elasticsearch": {
            "type": "date"
          }
        },
    
        "modified": {
          "$id": "modified",
          "type": "string",
          "title": "Modification date",
          "description": "Date on which the entity was changed.",
          "examples": [
            "2018-11-08T13:55:45Z"
          ],
          "format": "date-time",
          "_elasticsearch": {
            "type": "date"
          }
        },
        "creatorId": {
          "$id": "creatorId",
          "type": "string",
          "title": "Publisher",
          "description": "The person who created this entity",
          "examples": [
            "user:uuid:4600ea84-485a-49b3-8f15-85fc5ce2e0f9"
          ],
          "pattern": "^(user|service):uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$",
          "_elasticsearch": {
            "type": "keyword"
          }
        },
        "entityIcon": {
          "title": "Entity icon",
          "description": "The source of the entity icon image",
          "$ref": "#/definitions/imageSource"
        },
        "entityBanner": {
          "title": "Entity banner",
          "description": "The source of the entity banner image",
          "$ref": "#/definitions/imageSource"
        },
        "entityImages": {
          "type": "array",
          "title": "Entity Images id's or URL's",
          "items": {
            "$ref": "#/definitions/imageSource"
          }
        },
        "entityVideos": {
          "type": "array",
          "minItems": 0,
          "title": "Entity Videos",
          "description": "Visual representation of an entity",
          "items": {
            "anyOf": [
              {
                "type": "string",
                "format": "uri",
                "examples": ["https://image-host.com"],
                "_elasticsearch": {
                  "type": "keyword"
                }
              },
              {
                "type": "string",
                "examples": ["video:uui:67d4acaa-00e0-4a00-8b61-15abe20e1413"],
                "pattern": "^video:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$",
                "_elasticsearch": {
                  "type": "keyword"
                }
              }
            ]
          }
        }
      }
    }
  ]
}
