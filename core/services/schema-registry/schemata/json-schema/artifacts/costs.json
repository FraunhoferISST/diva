{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "costs",
  "type": "object",
  "title": "Costs",
  "definitions": {
    "cost": {
      "title": "Costs",
      "type": "object",
      "properties": {
        "value": {
          "title": "Value",
          "description": "A value representing a the cost numerically",
          "type": ["number", "null"],
          "examples": [0.93, 1000, 285639572, -3],
          "_elasticsearch": {
            "type": "float"
        }
        },
        "currency": {
          "type": "string",
          "title": "Currency",
          "description": "The currency for the costs",
          "examples": ["$", "â‚¬"],
          "_elasticsearch": {
            "type": "keyword"
        }
        },
        "period": {
          "type": ["string", "null"],
          "title": "Period",
          "description": "The period the costs occur",
          "enum": ["unlimited", "monthly","quarterly", "half-yearly", "yearly", ""],
          "examples": ["yearly", "daily"],
          "_elasticsearch": {
            "type": "keyword"
        }
        }
      },
      "additionalProperties": false,
      "required": ["value", "currency"]
    }
  },
  "properties": {
    "internalMaintenanceCost": {
      "allOf": [
        {
          "$ref": "#/definitions/cost"
        },
        {
          "title": "Maintenance Costs",
          "description": "Maintenance cost of a resource",
          "default": "0.00"
        }
      ]
    },
    "internalStorageCost": {
      "allOf": [
        {
          "$ref": "#/definitions/cost"
        },
        {
          "title": "Storage Costs",
          "description": "Storage cost of a resource",
          "default": "0.00"
        }
      ]
    },
    "internalDistributionCost": {
      "allOf": [
        {
          "$ref": "#/definitions/cost"
        },
        {
          "title": "Distribution Costs",
          "description": "Distribution cost of a resource",
          "default": "0.00"
        }
      ]
    },
    "externalCost": {
      "allOf": [
        {
          "$ref": "#/definitions/cost"
        },
        {
          "title": "External Costs",
          "description": "External cost of a resource",
          "default": "0.00"
        }
      ]
    }
  }
}


