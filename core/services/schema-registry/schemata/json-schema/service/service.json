{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "service",
    "type": "object",
    "title": "General Service Data",
    "required": [
      "serviceType"
    ],
    "allOf": [
      {
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^service:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
          },

          "serviceType": {

            "type": "string",
            "title": "Service Type",
            "description": "The general type of the service",
            "enum": [
              "generic",
              "app",
              "plugin",
              "api"
            ]
          }
        }
      },
      {
        "$ref": "/commonProperties"
      },
      {
        "$ref": "/costs"
      },
      {
        "$ref": "/serviceVendor"
      }
    ]
  }