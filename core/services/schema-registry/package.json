{
  "name": "schema-registry",
  "version": "0.0.2",
  "description": "A Schema Registry for delivering JSON and YML Schemata using HTTP",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development node index.js",
    "eslint-fix": "eslint --fix . --ext .js",
    "build:alpine": "pkg --config package.json -t node14-alpine-x64 --output index-alpine index.js",
    "build:linux": "pkg -t node14-linux-x64 index.js"
  },
  "keywords": [
    "Schema",
    "Registry",
    "NodeJS",
    "Express",
    "HTTP"
  ],
  "author": "dtebernum",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://gitlab.cc-asp.fraunhofer.de/diva/drm"
  },
  "dependencies": {
    "@diva/common": "^1.0.0",
    "glob": "^7.1.6",
    "keyv": "^4.0.3",
    "lowdb": "^1.0.0",
    "mime": "^2.5.2"
  },
  "devDependencies": {
    "@diva/eslint-config": "^0.1.0",
    "pkg": "^5.3.1"
  },
  "pkg": {
    "assets": ["schemata", "package.json"]
  }
}
