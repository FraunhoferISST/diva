{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "asset",
  "type": "object",
  "title": "General Asset Data",
  "required": [
    "assetType"
  ],
  "allOf": [
    {
      "$ref": "/commonProperties"
    },
    {
      "$ref": "/distributionProperties"
    },
    {
      "$ref": "/costs"
    },
    {
      "$ref": "/dataClassification"
    },
    {
      "properties": {

        "id": {
          "type": "string",
          "pattern": "^asset:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },

        "assetType": {

          "type": "string",
          "title": "Asset Type",
          "description": "The type of the asset",
          "enum": [
            "generic",
            "urbanPulse"
          ],
          "_elasticsearch": {
            "type": "keyword"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "assetType": {
            "const": "urbanPulse"
          }
        }
      },
      "then": {
        "$ref": "assetUrbanPulse"
      }
    }

  ]
}