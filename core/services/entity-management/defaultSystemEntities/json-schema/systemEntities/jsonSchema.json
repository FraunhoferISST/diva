{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "jsonSchema",
  "type": "object",
  "title": "JSON Schema",
  "required": [
    "name",
    "schema"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Schema name",
      "description": "Unique name of the schema",
      "examples": ["entity", "byteSize"],
      "_elasticsearch": {
        "enabled": false
      }
    },
    "scope": {
      "type": "object",
      "title": "Schema scope",
      "description": "Defines to which (sub-)entity the schema applies. If not specified, the schema is included as the root property of an entity",
      "required": ["key", "value"],
      "examples": [
        {
          "key": "entityType",
          "value": "resource"
        },
        {
          "key": "mimeType",
          "value": "application/pdf"
        }
      ],
      "properties": {
        "key": {
          "type": "string",
          "title": "Entity field name"
        },
        "value": {
          "type": "string",
          "title": "Entity field value"
        }
      }
    },
    "schema": {
      "type": "string",
      "title": "Schema definition",
      "description": "The schema definition of a field or of a part of an entity",
      "_elasticsearch": {
        "enabled": false
      }
    },
    "id": {
      "type": "string",
      "pattern": "^schema:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
    }
  }
}