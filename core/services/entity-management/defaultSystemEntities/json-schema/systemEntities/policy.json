{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "policy",
  "type": "object",
  "title": "Policy",
  "description": "policy rule definition",
  "required": [
    "name",
    "scope",
    "priority",
    "condition"
  ],
  "definitions": {
    "condition": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "properties": {
            "cypher": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string"
                }
              }
            },
            "mongo": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string"
                },
                "collection": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    }
  },
  "properties": {
    "scope": {
      "type": "object",
      "title": "Policy scope",
      "description": "Defines the API request scope to which the rule applies"
    },
    "priority": {
      "type": "integer",
      "title": "priority",
      "description": "Priority of the rule",
      "minimum": 0
    },
    "condition": {
      "title": "Rule condition",
      "description": "Rule condition that should be met",
      "type": "object",
      "properties": {
        "and": {
          "allOf": [
            {
              "$ref": "#/definitions/condition"
            },
            {
              "title": "AND conditions",
              "description": "Conjunction der rule conditions"
            }
          ]
        },
        "or": {
          "allOf": [
            {
              "$ref": "#/definitions/condition"
            },
            {
              "title": "OR conditions",
              "description": "disjunction der rule conditions"
            }
          ]
        }
      }
    },
    "excludes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "id": {
      "type": "string",
      "pattern": "^rule:uuid:[0-9a-f]{8}-[0-9a-f]{4}-[0-5][0-9a-f]{3}-[089ab][0-9a-f]{3}-[0-9a-f]{12}$"
    }
  }
}